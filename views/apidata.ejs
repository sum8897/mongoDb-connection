<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 20px;
      }
      table {
        border-collapse: collapse;
        width: 100%;
      }
      th,
      td {
        border: 1px solid #ccc;
        padding: 8px;
        text-align: left;
      }
      th {
        background: #f4f4f4;
      }
    </style>
    <title>APi data</title>
  </head>
  <body>
    <h1>Users from MongoDB</h1>

    <% if (users && users.length > 0) { %>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Age</th>
          <th>Mobile</th>
          <th>Email</th>
          <th>Action</th>
          <th>Update</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach(user => { %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.age %></td>
          <td><%= user.mobile %></td>
          <td><%= user.email %></td>
          <td><a href="/apidata/delete/<%= user._id %>">delete</a></td>
          <td><a href="/apidata/userlist/<%= user._id %>">update</a></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    <% } else { %>
    <p>No users found.</p>
    <% } %>
  </body>
</html>
